<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="810.0" style="-fx-background-color: rgb(027, 031, 034);" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wikiSpeakGUI.AudioCreationController">
   <children>
      <Button fx:id="submitCreationButton" layoutX="321.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleSubmitCreation" style="-fx-background-color: rgb(069,075,080);" text="Next" textFill="WHITE" />
      <Button fx:id="cancelButton" layoutX="231.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleBackToMainView" style="-fx-background-color: rgb(069,075,080);" text="Cancel" textFill="WHITE" />
      <Text fx:id="lineNoMessage" fill="WHITE" layoutX="39.0" layoutY="276.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Number of lines to include" />
      <TextArea fx:id="numberedTextArea" layoutX="39.0" layoutY="32.0" prefHeight="203.0" prefWidth="523.0" />
      <TextField fx:id="noLines" layoutX="39.0" layoutY="286.0" prefHeight="26.0" prefWidth="254.0" />
      <Button fx:id="speakButton" layoutX="504.0" layoutY="251.0" mnemonicParsing="false" onAction="#handleSpeakPress" style="-fx-background-color: rgb(069,075,080);" text="Speak" textFill="WHITE" />
      <Button fx:id="addButton" layoutX="566.0" layoutY="114.0" mnemonicParsing="false" onAction="#handleAddPress" style="-fx-background-color: rgb(069,075,080);" text="add" textFill="WHITE" />
      <ListView fx:id="selectedAudio" layoutX="616.0" layoutY="32.0" prefHeight="203.0" prefWidth="180.0" />
      <Button fx:id="delButton" layoutX="632.0" layoutY="235.0" mnemonicParsing="false" onAction="#handleDelPress" text="delete" />
      <Button fx:id="upButton" layoutX="708.0" layoutY="235.0" mnemonicParsing="false" onAction="#upPress" text="↑">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="downButton" layoutX="737.0" layoutY="235.0" mnemonicParsing="false" onAction="#downPress" text="↓">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <ComboBox fx:id="voiceSelect" layoutX="330.0" layoutY="258.0" prefWidth="150.0" />
      <Button fx:id="previewButton" layoutX="675.0" layoutY="279.0" mnemonicParsing="false" onAction="#previewPress" text="preview" />
   </children>
</AnchorPane>
