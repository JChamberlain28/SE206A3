<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="810.0" style="-fx-background-color: rgb(027, 031, 034);" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wikiSpeakGUI.AudioCreationController">
   <children>
      <Button fx:id="submitCreationButton" layoutX="461.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleSubmitCreation" style="-fx-background-color: rgb(069,075,080);" text="Next" textFill="WHITE" />
      <Button fx:id="cancelButton" layoutX="282.0" layoutY="351.0" mnemonicParsing="false" onAction="#handleBackToMainView" style="-fx-background-color: rgb(069,075,080);" text="Cancel" textFill="WHITE" />
      <TextArea fx:id="numberedTextArea" layoutX="20.0" layoutY="32.0" prefHeight="203.0" prefWidth="523.0" />
      <Button fx:id="speakButton" layoutX="485.0" layoutY="248.0" mnemonicParsing="false" onAction="#handleSpeakPress" style="-fx-background-color: rgb(069,075,080);" text="Speak" textFill="WHITE" />
      <Button fx:id="addButton" layoutX="559.0" layoutY="108.0" mnemonicParsing="false" onAction="#handleAddPress" style="-fx-background-color: rgb(069,075,080);" text="add" textFill="WHITE" />
      <ListView fx:id="selectedAudio" layoutX="616.0" layoutY="32.0" prefHeight="203.0" prefWidth="180.0" />
      <Button fx:id="delButton" layoutX="551.0" layoutY="150.0" mnemonicParsing="false" onAction="#handleDelPress" text="delete" />
      <Button fx:id="upButton" layoutX="666.0" layoutY="248.0" mnemonicParsing="false" onAction="#upPress" text="↑">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="downButton" layoutX="734.0" layoutY="248.0" mnemonicParsing="false" onAction="#downPress" text="↓">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <ComboBox fx:id="voiceSelect" layoutX="20.0" layoutY="248.0" prefWidth="150.0" />
      <Button fx:id="previewButton" layoutX="370.0" layoutY="351.0" mnemonicParsing="false" onAction="#previewPress" text="preview" />
   </children>
</AnchorPane>
